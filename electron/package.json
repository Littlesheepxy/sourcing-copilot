{
  "name": "sourcing-copilot",
  "version": "1.0.0",
  "description": "Boss直聘Sourcing智能助手",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "Boss直聘",
    "Sourcing",
    "招聘",
    "自动化"
  ],
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "find-process": "^1.4.7",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.yourcompany.sourcingcopilot",
    "productName": "Sourcing Copilot",
    "files": [
      "main.js",
      "preload.js",
      "loading.html",
      "startup.html",
      "service-error.html",
      "error.html",
      "login.html",
      "browser-reminder.html",
      "browser-running.html",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "../web-app/out",
        "to": "web-app"
      },
      {
        "from": "../build/sourcing-copilot-server",
        "to": "server/sourcing-copilot-server"
      },
      {
        "from": "../electron_backend.py",
        "to": "server/electron_backend.py"
      },
      {
        "from": "../start.py",
        "to": "server/start.py"
      },
      {
        "from": "../main.py",
        "to": "server/main.py"
      },
      {
        "from": "../automation/sourcing_copilot.db",
        "to": "server/sourcing_copilot_template.db",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "../icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "../icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
